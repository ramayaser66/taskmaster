<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:text="My Tasks"
        />

    <LinearLayout
        android:id="@+id/add_all_btn_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_below="@+id/recyclerView"
      >
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Add Task"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="50dp"
            android:text="All Tasks" />
    </LinearLayout>


    <Button
        android:id="@+id/settingsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_button_cont"
        android:layout_centerHorizontal="true"
        android:text="Settings " />

    <LinearLayout
        android:id="@+id/task_button_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/usernamehomepage"
        >

        <Button
            android:id="@+id/TaskAbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task A "
            android:layout_marginLeft="8dp"
           />

        <Button
            android:id="@+id/TaskBbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TaskB"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/taskCbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="taskC"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/usernamehomepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_all_btn_cont"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="username"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView" />





</RelativeLayout>